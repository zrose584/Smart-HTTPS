{
  "browser_specific_settings": {
    "gecko": {
      "id": "smarthttps@mybrowseraddon.com",
      "strict_min_version": "42.0"
    }
  },
  "version": "0.2.9",
  "name": "Smart HTTPS",
  "manifest_version": 2,
  "short_name": "smart-https",
  "background": {"page": "lib/chrome/background.html"},
  "homepage_url": "http://mybrowseraddon.com/smart-https.html",
  "permissions": ["tabs", "storage", "<all_urls>", "webRequest", "webRequestBlocking"],
  "description": "Automatically changes HTTP protocol to HTTPS, and if loading encounters error, reverts it back to HTTP.",
  "options_ui": {
    "open_in_tab": true,
    "chrome_style": true,
    "page": "data/options/options.html"
  },
  "browser_action": {
    "default_title": "Smart HTTPS",
    "default_popup": "data/popup/popup.html",
    "default_icon": {
      "16": "data/icons/16.png",
      "32": "data/icons/32.png",
      "48": "data/icons/48.png",
      "64": "data/icons/64.png"
    }
  },
  "icons": {
    "16": "data/icons/16.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
